<Page
    x:Class="DownLoader.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:model="using:DownLoader.Models"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <ResourceDictionary>
            <model:Node x:Key="NodeModel"/>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="ButtonBackground" Color="{ThemeResource SystemAccentColor}"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{ThemeResource SystemAccentColorLight1}"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="{ThemeResource SystemAccentColorDark1}"/>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="ButtonBackground" Color="{ThemeResource SystemAccentColor}"/>

                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{ThemeResource SystemAccentColorLight1}"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="{ThemeResource SystemAccentColorDark1}"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <MenuBar VerticalAlignment="Top" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"    
                 DataContext="{Binding MainPageLocator, Source={StaticResource Locator}}">
            <MenuBarItem x:Uid="menuFile" AccessKey="F">
                <MenuFlyoutItem x:Uid="menuAddLink"
                                Icon="OpenFile"
                                Command="{Binding OpenPopup}">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Key="O"
                                             Modifiers="Control" />
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutSeparator />
                <MenuFlyoutItem x:Uid="menuSettings"
                                Icon="Setting"
                                Command="{Binding GoToSettings}">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Key="S"
                                             Modifiers="Control" />
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutSubItem Text="Demo">
                    <MenuFlyoutItem Text="A"/>
                    <MenuFlyoutItem Text="B"/>
                    <MenuFlyoutItem Text="C"/>
                </MenuFlyoutSubItem>
            </MenuBarItem>
            <MenuBarItem x:Uid="menuHelp"
                         AccessKey="H">
                <MenuFlyoutItem Text="About"/>
            </MenuBarItem>
        </MenuBar>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"
                    DataContext="{Binding MainPageLocator, Source={StaticResource Locator}}" >
            <Button x:ConnectionId='9' x:Uid="bnAddLink" x:Name="bnAddLink" Grid.Column="0" Margin="5,5"
                    Command="{Binding OpenPopup}"/>
            <Button x:ConnectionId='10' x:Uid="bnSetting" x:Name="bnSetting" Grid.Column="1" Margin="5,5"  
                    Command="{Binding GoToSettings}"/>
            <Button x:ConnectionId='11' x:Uid="bnStop" x:Name="bnStop" Grid.Column="2" Margin="5, 5" />
            <Button x:ConnectionId='12' x:Uid="bnDelete" x:Name="bnDelete" Grid.Column="3" Margin="5, 5"
                    Command="{Binding StopDownload}"/>
        </StackPanel>

        <Popup x:ConnectionId='2' x:Name="addLink" IsOpen="{Binding IsOpen}" 
               DataContext="{Binding MainPageLocator, Source={StaticResource Locator}}"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               IsLightDismissEnabled="False" Grid.Row="2" Grid.ColumnSpan="9">

            <StackPanel BorderBrush="{ThemeResource SystemAccentColor}"  BorderThickness="2" Background="White" Width="400" Height="310" 
                        Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

                <TextBlock x:Uid="tblockLink" FontWeight="Bold" Margin="10, 5"/>
                <TextBox x:ConnectionId='6' Name="tbLink" BorderBrush="{ThemeResource SystemAccentColor}" Margin="10, 5"
                         BorderThickness="1" Width="370" HorizontalAlignment="Left"/>

                <TextBlock x:Uid="tblockDescription" FontWeight="Bold" Margin="10, 5"/>
                <TextBox x:ConnectionId='7' Name="tbDescription" BorderBrush="{ThemeResource SystemAccentColor}" Margin="10, 5"
                         BorderThickness="1" Width="370" HorizontalAlignment="Left"
                         Text="{Binding Description, Mode=TwoWay}"/>

                <TextBlock x:Uid="tblockType" Margin="10, 5" FontWeight="Bold"/>
                <ComboBox x:ConnectionId='8' Name="cbType" BorderBrush="SteelBlue" SelectedIndex="0" Margin="10,5"
                          BorderThickness="1" Width="370" HorizontalAlignment="Left"
                          
                          ItemsSource="{Binding FileTypes}"
                          SelectedValue="{Binding FType, Mode=TwoWay}"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10" >

                    <Button x:Uid="downLoadFile" HorizontalAlignment="Right" Margin="5" 
                            Command="{Binding DownloadCommand}" Background="{ThemeResource SystemAccentColor}"
                            CommandParameter="{Binding ElementName=tbLink, Path=Text}"/>

                    <Button x:Uid="downLoadFileAs" HorizontalAlignment="Right" Margin="5" 
                            Command="{Binding DownloadCommandAs}" 
                            CommandParameter="{Binding ElementName=tbLink, Path=Text}"/>

                    <Button x:Uid="bnClosePopup" HorizontalAlignment="Right" Margin="5" 
                            Command="{Binding ClosePopup}"/>
                </StackPanel>
            </StackPanel>
        </Popup>

        <TreeView x:ConnectionId='3' x:Name="tvMain" FontSize="12" 
                  Grid.Row="3" Grid.Column="0"
                  ItemsSource="{Binding GetNodes}"/>

        <controls:DataGrid x:ConnectionId='4' x:Name="MainGrid"  x:FieldModifier="public" Margin="15,1,-3.6,32.2"
                           Grid.Column="3" Grid.ColumnSpan="6" Grid.Row="3"
                           AutoGenerateColumns="False"
                           DataContext="{Binding MainPageLocator, Source={StaticResource Locator}}"
                           ItemsSource="{Binding Files}">
      
            <controls:DataGrid.Columns>
                <controls:DataGridTextColumn x:Uid="gridHeadFileName" Width="250" FontSize="12" Binding="{Binding Name}">
                    <controls:DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </controls:DataGridTextColumn.ElementStyle>
                </controls:DataGridTextColumn>
                <controls:DataGridTextColumn x:Uid="gridHeadSize" Width="100" FontSize="12" Binding="{Binding FileSize, Mode=TwoWay}"/>
                <controls:DataGridTextColumn x:Uid="gridType" Width="110" FontSize="12" Binding="{Binding Type}"/>
                <controls:DataGridTemplateColumn x:Uid="gridHeadState" Width="220">
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <ProgressBar Value="{Binding Path=State, Mode=OneWay}" 
                                             Minimum="0" Maximum="100" Height="20"/>
                                <TextBlock Text="{Binding Status, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>
                <controls:DataGridTextColumn x:Uid="gridHeaderDate" Width="110" FontSize="12" Binding="{Binding DateTime}">
                    <controls:DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </controls:DataGridTextColumn.ElementStyle>
                </controls:DataGridTextColumn>
                <controls:DataGridTextColumn x:Uid="gridHeaderDescription" Width="270" FontSize="12" Binding="{Binding Description}">
                    <controls:DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </controls:DataGridTextColumn.ElementStyle>
                </controls:DataGridTextColumn>
            </controls:DataGrid.Columns>
        </controls:DataGrid>

    </Grid>
</Page>

