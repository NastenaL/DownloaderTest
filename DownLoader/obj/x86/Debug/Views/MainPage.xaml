<Page
    x:Class="DownLoader.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:ic="using:Microsoft.Xaml.Interactions.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x1="using:System"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="ButtonBackground" Color="{ThemeResource SystemAccentColor}"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{ThemeResource SystemAccentColorLight1}"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="{ThemeResource SystemAccentColorDark1}"/>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="ButtonBackground" Color="{ThemeResource SystemAccentColor}"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{ThemeResource SystemAccentColorLight1}"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="{ThemeResource SystemAccentColorDark1}"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid x:ConnectionId='2' x:Name="MainWindow">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <MenuBar VerticalAlignment="Top" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"    
                 DataContext="{Binding MainPageLocator, Source={StaticResource Locator}}">
            <MenuBarItem x:Uid="menuFile" AccessKey="F">
                <MenuFlyoutItem x:Uid="menuAddLink"
                                Icon="OpenFile"
                               Command="{Binding OpenPopUp}" CommandParameter="{Binding ElementName=AddLinkPopup}">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Key="O"
                                             Modifiers="Control" />
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutSeparator />
                <MenuFlyoutItem x:Uid="menuSettings"
                                Icon="Setting"
                                Command="{Binding GoToSettings}">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Key="S"
                                             Modifiers="Control" />
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutSubItem Text="Demo">
                    <MenuFlyoutItem Text="A"/>
                    <MenuFlyoutItem Text="B"/>
                    <MenuFlyoutItem Text="C"/>
                </MenuFlyoutSubItem>
            </MenuBarItem>
            <MenuBarItem x:Uid="menuHelp"
                         AccessKey="H">
                <MenuFlyoutItem Text="About"/>
            </MenuBarItem>
        </MenuBar>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"
                    DataContext="{Binding MainPageLocator, Source={StaticResource Locator}}" >
            <Button x:ConnectionId='18' x:Uid="bnAddLink" x:Name="bnAddLink" Grid.Column="0" Margin="10,5"
                    Command="{Binding OpenPopUp}" CommandParameter="{Binding ElementName=AddLinkPopup}"/>
            <Button x:ConnectionId='19' x:Uid="bnSetting" x:Name="bnSetting" Grid.Column="1" Margin="5,5"  
                    Command="{Binding GoToSettings}"/>
            <Button x:ConnectionId='20' x:Uid="bnStop" x:Name="bnStop" Grid.Column="2" Margin="5, 5" 
                     Command="{Binding StopDownload}"/>
            <Button x:Uid="bnCancel" Grid.Column="2" Margin="5, 5" 
                     Command="{Binding CancelDownload}"/>
        </StackPanel>

        <Popup x:ConnectionId='3' x:Name="AddLinkPopup" IsOpen="{Binding IsOpen}" x:FieldModifier="public"
               DataContext="{Binding MainPageLocator, Source={StaticResource Locator}}"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               IsLightDismissEnabled="False" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="10">

            <StackPanel BorderBrush="{ThemeResource SystemAccentColor}"  BorderThickness="2" Background="White" Width="400" Height="340" 
                        Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

                <TextBlock x:Uid="tblockLink" FontWeight="Bold" Margin="10, 5"/>
                <TextBox x:ConnectionId='15' Name="tbLink" BorderBrush="{ThemeResource SystemAccentColor}" Margin="10, 5"
                         BorderThickness="1" Width="370" HorizontalAlignment="Left"/>

                <TextBlock x:Uid="tblockDescription" FontWeight="Bold" Margin="10, 5"/>
                <TextBox x:ConnectionId='16' Name="tbDescription" BorderBrush="{ThemeResource SystemAccentColor}" Margin="10, 5"
                         AcceptsReturn="True" TextWrapping="Wrap"
                         BorderThickness="1" Width="370" HorizontalAlignment="Left"
                         Text="{Binding Description, Mode=TwoWay}"/>

                <TextBlock x:Uid="tblockType" Margin="10, 5" FontWeight="Bold"/>
                <ComboBox x:ConnectionId='17' Name="cbType" BorderBrush="SteelBlue" SelectedIndex="0" Margin="10,5"
                          BorderThickness="1" Width="370" HorizontalAlignment="Left"
                          ItemsSource="{Binding FileTypes}"
                          SelectedValue="{Binding FType, Mode=TwoWay}"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10" >

                    <Button x:Uid="downLoadFile" HorizontalAlignment="Right" Margin="5" 
                            Background="{ThemeResource SystemAccentColor}" >
                        <i:Interaction.Behaviors>
                            <ic:EventTriggerBehavior EventName="Click">
                                <ic:InvokeCommandAction Command="{Binding ClosePopUp}" CommandParameter="{Binding ElementName=AddLinkPopup}"/>
                                <ic:InvokeCommandAction Command="{Binding DownloadCommand}" CommandParameter="{Binding ElementName=tbLink, Path=Text}"/>
                            </ic:EventTriggerBehavior>
                        </i:Interaction.Behaviors>
                    </Button>

                    <Button x:Uid="downLoadFileAs" HorizontalAlignment="Right" Margin="5">
                        <i:Interaction.Behaviors>
                            <ic:EventTriggerBehavior EventName="Click">
                                <ic:InvokeCommandAction Command="{Binding DownloadCommandAs}" CommandParameter="{Binding ElementName=tbLink, Path=Text}"/>
                                <ic:InvokeCommandAction Command="{Binding ClosePopUp}" CommandParameter="{Binding ElementName=AddLinkPopup}"/>
                            </ic:EventTriggerBehavior>
                        </i:Interaction.Behaviors>
                    </Button>
                    <Button x:Uid="bnClosePopup" HorizontalAlignment="Right" Margin="5" 
                            Command="{Binding ClosePopUp}" CommandParameter="{Binding ElementName=AddLinkPopup}"/>
                </StackPanel>
            </StackPanel>
        </Popup>

        <Popup x:ConnectionId='4' x:Name="FileDelails" IsOpen="{Binding IsOpen}" HorizontalAlignment="Center" VerticalAlignment="Center"
               DataContext="{Binding MainPageLocator, Source={StaticResource Locator}}"
               IsLightDismissEnabled="False" Grid.Row="2" Grid.ColumnSpan="10">

            <StackPanel Background="White" BorderBrush="{ThemeResource SystemAccentColor}" BorderThickness="2" Width="420" Height="{Binding ElementName=MainWindow, Path=Height}" 
                        Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

                <TextBlock x:Uid="tblFileName" Text="gridHeadFileName" FontWeight="Bold" Margin="10, 5"/>
                <TextBlock x:ConnectionId='10' Name="tbFileName" Text="{Binding ElementName=lvDownloads, Path=SelectedItem.Name}" Margin="10, 5">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock x:Uid="tbSize" FontWeight="Bold" Margin="10, 5"/>
                <TextBlock x:ConnectionId='11' Name="tbFileSize" Text="{Binding ElementName=lvDownloads, Path=SelectedItem.FileSize}" Margin="10, 5"/>

                <TextBlock x:Uid="tbType" Text="gridHeadFileName" FontWeight="Bold" Margin="10, 5"/>
                <TextBlock x:ConnectionId='12' Name="tbFileType" Text="{Binding ElementName=lvDownloads, Path=SelectedItem.Type}" Margin="10, 5"/>

                <TextBlock x:Uid="tbDate" Text="gridHeadFileName" FontWeight="Bold" Margin="10, 5"/>
                <TextBlock x:ConnectionId='13' Name="tbDataTime" Text="{Binding ElementName=lvDownloads, Path=SelectedItem.DateTime}" Margin="10, 5"/>

                <TextBlock x:Uid="tbDescription" FontWeight="Bold" Margin="10, 5"/>
                <TextBox x:ConnectionId='14' Name="tbpDescription" BorderBrush="{ThemeResource SystemAccentColor}" Margin="10, 5"
                         BorderThickness="1" Width="370" HorizontalAlignment="Left"
                         Text="{Binding ElementName=lvDownloads, Path=SelectedItem.Description, Mode=TwoWay}"/>

                <StackPanel Orientation="Horizontal">
                    <Button x:Uid="bnUpdate" Margin="10,5" >
                        <i:Interaction.Behaviors>
                            <ic:EventTriggerBehavior EventName="Click">
                                <ic:InvokeCommandAction Command="{Binding UpdateFileDescription}" CommandParameter="{Binding ElementName=lvDownloads, Path=SelectedItem}"/>
                                <ic:InvokeCommandAction Command="{Binding RefreshDataListView}" CommandParameter="{Binding ElementName=lvDownloads}"/>
                                <ic:InvokeCommandAction Command="{Binding ClosePopUp}" CommandParameter="{Binding ElementName=FileDelails}"/>
                            </ic:EventTriggerBehavior>
                        </i:Interaction.Behaviors>
                    </Button>
                    <Button x:Uid="bnClosePopup" HorizontalAlignment="Right" Margin="5" 
                        Command="{Binding ClosePopUp}" CommandParameter="{Binding ElementName=FileDelails}"/>
                </StackPanel>
            </StackPanel>
        </Popup>

        <ListView x:ConnectionId='5' x:Name="lvDownloads" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="6"  
                  DataContext="{Binding MainPageLocator, Source={StaticResource Locator}}"  
                  ItemsSource="{Binding Files, Mode=OneWay}" Margin="10" Height="470" 
                  FontSize="11" BorderBrush="{ThemeResource SystemAccentColor}" BorderThickness="1">

            <i:Interaction.Behaviors>
                <ic:EventTriggerBehavior EventName="DoubleTapped">
                    <ic:InvokeCommandAction Command="{Binding OpenPopUp}" CommandParameter="{Binding ElementName=FileDelails}"/>
                </ic:EventTriggerBehavior>
            </i:Interaction.Behaviors>

            <ListView.HeaderTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="{ThemeResource SystemAccentColor}">

                        <Grid Padding="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="170"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="270"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" FontWeight="Bold" x:Uid="gridHeadFileName" Style="{ThemeResource CaptionTextBlockStyle}"/>
                            <TextBlock Grid.Column="1" FontWeight="Bold" x:Uid="gridHeadSize" Style="{ThemeResource CaptionTextBlockStyle}"/>
                            <TextBlock Grid.Column="2" FontWeight="Bold" x:Uid="gridType" Style="{ThemeResource CaptionTextBlockStyle}"/>
                            <TextBlock Grid.Column="3" FontWeight="Bold" x:Uid="gridHeadState" Style="{ThemeResource CaptionTextBlockStyle}"/>
                            <TextBlock Grid.Column="4" FontWeight="Bold" x:Uid="gridHeaderDate" Style="{ThemeResource CaptionTextBlockStyle}"/>
                            <TextBlock Grid.Column="5" FontWeight="Bold" x:Uid="gridHeaderDescription" Style="{ThemeResource CaptionTextBlockStyle}"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.HeaderTemplate>
            <ListView.ItemTemplate>
                <DataTemplate x:Name="TableDataTemplate">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="170"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="270"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Margin="5" VerticalAlignment="Center" Text="{Binding Name}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Grid.Column="1" Margin="7"  VerticalAlignment="Center" Text="{Binding FileSize}"/>
                        <TextBlock Grid.Column="2" VerticalAlignment="Center" Text="{Binding Type}"/>

                        <StackPanel Grid.Column="3" Margin="5">
                            <ProgressBar x:Name="pbLoading" Value="{Binding State, Mode=OneWay}" 
                                             Minimum="0" Maximum="100" Height="20"/>
                            <TextBlock Text="{Binding Status, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock Grid.Column="4" Margin="5" VerticalAlignment="Center" Text="{Binding DateTime}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <TextBlock Grid.Column="5" VerticalAlignment="Center" Text="{Binding Description}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

