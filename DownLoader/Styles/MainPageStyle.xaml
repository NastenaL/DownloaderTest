<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Styles/ThemeStyle.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="Grid" x:Key="MainPageGrid">
        <Setter Property="Background" Value="{ThemeResource MainWindowBackground}"/>
        <Setter Property="Opacity" Value="0.8"/>
    </Style>

    <Style TargetType="NavigationViewItem" x:Key="MenuStyle">
        <Setter Property="Background" Value="{ThemeResource SystemAccentColor}"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

</ResourceDictionary>
