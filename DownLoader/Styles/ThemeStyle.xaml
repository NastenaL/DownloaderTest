<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DownLoader.Styles">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="MyButtonBackgroundThemeBrush" Color="White"/>
            <SolidColorBrush x:Key="MyButtonForegroundThemeBrush" Color="Black"/>
            <SolidColorBrush x:Key="MainWindowBackground" Color="#FBEDF2"/>
            <SolidColorBrush x:Key="BorderBrushColor" Color="#111323"/>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="MyButtonBackgroundThemeBrush" Color="Black"/>
            <SolidColorBrush x:Key="MyButtonForegroundThemeBrush" Color="White"/>
            <SolidColorBrush x:Key="MainWindowBackground" Color="#111323"/>
            <SolidColorBrush x:Key="BorderBrushColor" Color="White"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
